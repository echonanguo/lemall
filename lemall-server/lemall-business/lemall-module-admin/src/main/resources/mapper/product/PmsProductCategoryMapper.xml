<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.nanguo.lemall.business.admin.product.mapper.PmsProductCategoryMapper">
    <resultMap id="BaseResultMap" type="org.nanguo.lemall.business.admin.product.entity.PmsProductCategory">
        <!--@mbg.generated-->
        <!--@Table pms_product_category-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="level" jdbcType="INTEGER" property="level"/>
        <result column="product_count" jdbcType="INTEGER" property="productCount"/>
        <result column="product_unit" jdbcType="VARCHAR" property="productUnit"/>
        <result column="nav_status" jdbcType="INTEGER" property="navStatus"/>
        <result column="show_status" jdbcType="INTEGER" property="showStatus"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="keywords" jdbcType="VARCHAR" property="keywords"/>
        <result column="description" jdbcType="LONGVARCHAR" property="description"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id,
        parent_id,
        `name`,
        `level`,
        product_count,
        product_unit,
        nav_status,
        show_status,
        sort,
        icon,
        keywords,
        description
    </sql>
    <!-- 映射父类 + 子类集合 -->
    <resultMap id="CategoryWithChildrenMap"
               type="org.nanguo.lemall.business.admin.product.dto.response.PmsProductCategoryWithChildrenItem">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="children" ofType="org.nanguo.lemall.business.admin.product.dto.response.PmsProductCategoryResponseDTO">
            <id property="id" column="child_id"/>
            <result property="name" column="child_name"/>
        </collection>
    </resultMap>

    <select id="listWithChildren"
            resultMap="CategoryWithChildrenMap">
        select c1.id,
               c1.name,
               c2.id   as child_id,
               c2.name as child_name
        from pms_product_category c1
                 left join pms_product_category c2 on c1.id = c2.parent_id
        where c1.parent_id = 0
    </select>
</mapper>